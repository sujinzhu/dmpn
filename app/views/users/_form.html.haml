= semantic_form_for @user do |f|
  = f.inputs do
    - if @user.persisted?
      = f.input :email, input_html: {disabled: true}
    - else
      = f.input :email
    = f.input :password
    = f.input :password_confirmation
    .form-group
      %span.form-wrapper
        = check_box_tag :admin, '1', @user.persisted? && @user.is_admin?
      %span.form-label
        %label.control-label{for: :admin}
          Is admin?

    = f.actions do
      = f.action :submit, :as => :input, :wrapper_html => { :class => 'btn-default'}
