.page-header
  .pull-right
    = link_to_new new_product_path
  %h1 Products

%table.table.table-striped.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th Category
      %th Name
      %th Code
      %th Batch
      %th
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td=render :partial => "categories/ancestor_flat", :locals => { :category => product.category }
        %td= product.name
        %td= product.code
        %td= product.batch
        %td= link_to 'Show', product
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }

:coffee
  $('table').DataTable()
