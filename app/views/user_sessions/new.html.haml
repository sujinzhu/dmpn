= form_for @user_session, url: user_session_path, html: {class: 'form-signin'} do |f|
  %h2.form-signin-heading Please sign in
  = f.label :email, 'Email', {class: 'sr-only'}
  = f.email_field :email, {class: 'form-control', placeholder: 'Email address', required: true, autofocus: true}
  = f.label :password, 'Password', {class: 'sr-only'}
  = f.password_field :password, {class: 'form-control', placeholder: 'Password', required: true}

  = f.submit 'Sign in', {class: 'btn btn-lg btn-primary btn-block'}
