.page-header
  .btn-group.pull-right
    = link_to_edit edit_category_path(@category)
    = link_to_index categories_path
    = link_to_new new_category_path
  %h1 Category

%ul.list-group
  %li.list-group-item
    %h4.list-group-item-heading Parent:
    - unless @category.is_root?
      =render :partial => "ancestor", :locals => { :category => @category.parent }
    - else
      %ol.breadcrumb
        %li.active All
      -# %p.list-group-item-text= @category.name
  %li.list-group-item
    %h4.list-group-item-heading Name:
    %p.list-group-item-text= @category.name
  %li.list-group-item
    %h4.list-group-item-heading Place holder:
    %p.list-group-item-text= @category.place_holder
  %li.list-group-item
    %h4.list-group-item-heading Is view:
    %p.list-group-item-text= @category.is_view
