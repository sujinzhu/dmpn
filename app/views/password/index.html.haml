= form_for @user, url: { action: 'change' }, html: {class: 'form-signin'} do |f|
  %h2.form-signin-heading
    Change Password
  = f.label :password, 'Password', {class: 'sr-only'}
  = f.password_field :password, {class: 'form-control', placeholder: 'Password', required: true}
  = f.label :password_confirmation, 'Confirm', {class: 'sr-only'}
  = f.password_field :password_confirmation, {class: 'form-control', placeholder: 'Confirm', required: true}

  = f.submit 'Change', {class: 'btn btn-lg btn-primary btn-block'}
